<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialNetwork.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
@*        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SocialNetwork</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>*@
    </header>
    <div class="item-bg-noround" style="width:100%; height:5vh; position:absolute; top:0; white-space:nowrap; ">
        <div class="container" style="height:100%; white-space:nowrap;">
            @if (User.Identity.IsAuthenticated)
            {
                <span>
                    <img style="max-height:100%; width:2.5rem; height:2.5rem; border-radius:50%;" src="@Context.Items["AvatarPath"]"/>
                    <span><a href="/u/id0" style="text-decoration:none; color:white;">@User.Claims.FirstOrDefault(c => c.Type == "username").Value</a></span>
                    <span class="text-warning"><a class="text-warning" style="text-decoration:none;" href="/home/logout">(Logout)</a></span>
                </span>
            }
            else
            {
                <span>
                    <span><a class="text-warning" style="text-decoration:none;" href="/home/login">Login/Register</a></span>
                </span>
            }
        </div>
    </div>
    <div class="container-fluid">
        
        

        <div class="row m-0" style="height:100vh; width:25vw; position: absolute; z-index:228; right:0;">
            <div class="col-lg" >
                <div id="notif-col" class="text-wrap text-break text-white m-3" style="position: absolute; bottom: 0;">
                </div>
            </div>
        </div> 
        <div class="mb-3" style="width:100%; height:5vh; top:0;"></div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-2" style="padding-left:5%; font-size:1.5rem;">
                <a style="text-decoration:none; color:white;" href="/u/id0"> 
                    <div class="p-1 mb-2 text-white menu-item" style="border-radius:0.25rem;">
                            <i class="bi bi-incognito"></i> My profile 
                    </div>
                </a>

                <a style="text-decoration:none; color:white;" href="#"> 
                    <div class="p-1 mb-2 text-white menu-item" style="border-radius:0.25rem;">
                            <i class="bi bi-newspaper"></i> Feed 
                    </div>
                </a>

                <a style="text-decoration:none; color:white;" href="#"> 
                    <div class="p-1 mb-2 text-white menu-item" style="border-radius:0.25rem;">
                        
                            <i class="bi bi-messenger"></i> Messages 
                    </div>
                </a>

                <a style="text-decoration:none; color:white;" href="/u/Friends"> 
                    <div class="p-1 mb-2 text-white menu-item" style="border-radius:0.25rem;">
                            <i class="bi bi-person"></i> Friends
                    </div>
                </a>

                <a style="text-decoration:none; color:white;" href="#"> 
                    <div class="p-1 mb-2 text-white menu-item" style="border-radius:0.25rem;">
                            <i class="bi bi-megaphone"></i> Groups
                    </div>
                </a>

                <a style="text-decoration:none; color:white;" href="/u/settings"> 
                    <div class="p-1 mb-2 text-white menu-item" style="border-radius:0.25rem;">
                            <i class="bi bi-gear"></i> Settings
                    </div>
                </a>
           </div>
            <div class="col-sm-6">@RenderBody()</div>
            <div class="col-sm-3"></div>
        </div> 
    </div>

@*    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SocialNetwork - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
